@model IEnumerable<CERLLAB.Models.ProductStage>
@using CERLLAB.Models
@using CERLLAB.Controllers.General;
@{
    ViewBag.Title = "Index of ProductStage";
    SelectList cust = (SelectList)ViewData["CustomerNameList"];
}

<h2>@ViewBag.Title</h2>

<p>
    
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "ProductStage", FormMethod.Get))
    {
        @Html.DropDownList("CustomerName", cust)
        <input type="submit" value="搜尋" />
    }
</p>
<table class="jtable" style="table-layout:fixed;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TextValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TextValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
