@model CERLLAB.Models.ItemTreeNode
@if (Model.Children.Count > 0)
{
    <ul style="font-size: 0.92em;">
        @foreach (CERLLAB.Models.ItemTreeNode node in Model.Children)
        {
            if (node.IsUrl == 1)
            {
                <li>
                    <span class="folder" style="font-size: 0.97em;">
                        <a href="@Html.DisplayFor(x => node.Url)">@Html.DisplayFor(x => node.FullName)</a>
                        @if (node.IsShowUnsignForm > 0)
                        {
                            <span style="font-size: 0.8em; color: yellow;">(@Html.DisplayFor(x => node.CountInProcessingForm))</span>
                        }

                        @if (node.IsShowReport > 0)
                        {
                            <span style="font-size: 0.8em; color: white;">(@Html.DisplayFor(x => node.CountReports))</span>
                        }
                    </span>@Html.DisplayFor(x => node)
                </li>
            }
            else
            {
                <li>
                    <span class="folder" style="font-size: 0.97em;">
                        @Html.DisplayFor(x => node.FullName)
                        @if (node.IsShowUnsignForm > 0)
                        {
                            <span style="font-size: 0.8em; color: yellow;">(@Html.DisplayFor(x => node.CountInProcessingForm))</span>
                        }

                        @if (node.IsShowReport > 0)
                        {
                            <span style="font-size: 0.8em; color: white;">(@Html.DisplayFor(x => node.CountReports))</span>
                        }
                    </span>
                    @Html.DisplayFor(x => node)
                </li>
            }
        }
    </ul>
}
