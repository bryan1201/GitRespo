@model IEnumerable<CERLLAB.Models.vRole>

<h2>Role List</h2>

<p>
    @Html.ActionLink("Create New", "Create")<br />
    @Html.DropDownList("Site",(IEnumerable<SelectListItem>)ViewData["siteList"])
</p>
<table class="jtable" style="table-layout:fixed;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentRoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menuFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.udt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentRoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menuFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.udt)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}
</table>

