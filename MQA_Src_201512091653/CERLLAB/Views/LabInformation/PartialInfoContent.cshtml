@model IEnumerable<CERLLAB.Models.vLabInformation>
<head>
    <title>On Hand Job</title>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#accordion').accordion({
                heightStyle: "content",
                collapsible: true
            });

            $('.marquee').marquee({//speed in milliseconds of the marquee
                duration: 2000,
                //gap in pixels between the tickers
                gap: 20,
                //time in milliseconds before the marquee will start animating
                delayBeforeStart: 5,
                direction: 'up',
                duplicated: true,
                pauseOnHover: true
            });
        });

        
    </script>
</head>
<div class="wrapper">
    <div id="accordion">
        <h3>LAB訊息公告</h3>
        <div class="marquee" style="overflow-y:hidden;overflow-x:hidden;">
            <ul>
                @foreach (var item in Model)
                {
                    <li>@item.title
                        <ul>
                            <li>@item.content<br /><br /></li>
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
