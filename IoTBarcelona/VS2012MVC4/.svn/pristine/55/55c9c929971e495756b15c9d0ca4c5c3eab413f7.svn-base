@model IEnumerable<Barcelona.Models.EventVision>

@{
    ViewBag.Title = "EventVision";
}
<ul data-role="listview" data-inset="true">
    <li data-role="list-divider">@ViewBag.Title</li>
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Import Event Data", "Import")</li>
    <li>@Html.ActionLink("Create New", "Create")</li>
    <li>
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AdultQty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.X)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Y)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cdt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IPCamID)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdultQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.X)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Y)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cdt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IPCamID)
                    </td>
                    <td style="font-size:0.8em">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Del", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </li>
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
</ul>