@model Barcelona.Models.CustMailMessage

@{
    ViewBag.Title = "New Mail";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Receiver)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Receiver)
            @Html.ValidationMessageFor(model => model.Receiver)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Subject)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Subject)
            @Html.ValidationMessageFor(model => model.Subject)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body, new { cols = 10, @rows = 5, style = "width: 100%" })
            @Html.ValidationMessageFor(model => model.Body)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<ul data-role="listview" data-inset="true">
    <li>
        @Html.ActionLink("Back to List", "Index")
    </li>
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
</ul>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
