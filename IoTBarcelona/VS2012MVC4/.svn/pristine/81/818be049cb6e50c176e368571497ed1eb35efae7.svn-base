    box-shadow: rgba(200,200,200,1) 0 0px 0px;
    margin-top: 0.75em;*/

    overflow:hidden;
    border:1px solid #d3d3d3;
    background:#ffffff;
    width:100%;
    margin:0 auto 0;
    -moz-border-radius:3px; /* FF1+ */
    -webkit-border-radius:3px; /* Saf3-4 */
    border-radius:3px;
    -moz-box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
    -webkit-box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
}

	th, td {padding:0px 3px 2px; text-align:left;}
	
	th {padding-top:1px; text-shadow: -1px 1px 1px #9E5959; color: white; background:#0078ae; font-size: 16px; font-weight:bold; text-align:left;}
	
	td {border-top:1px solid #e0e0e0; border-right:1px solid #f0f0f0; font-size: 1.1em; text-align: left;word-wrap:break-word;color:#0078ae;}
	
	tr.odd-row td {background:#f0f0f0;}
	
	td.first, th.first {text-align:left}
	
	td.last {border-right:none;}
	
	/*
	Background gradients are completely unnecessary but a neat effect.
	*/
	
/*	td {
		background: -moz-linear-gradient(100% 25% 90deg, #fefefe, #f9f9f9);
		background: -webkit-gradient(linear, 0% 0%, 0% 25%, from(#a9a9a9), to(#d2d2d2));
	}
*/
	tr.even-row td {
		background: -moz-linear-gradient(100% 25% 90deg, #fefefe, #f9f9f9);
		background: -webkit-gradient(linear, 0% 0%, 0% 25%, from(#a9a9a9), to(#d2d2d2));
	}
	
	tr.odd-row td {
		background: -moz-linear-gradient(100% 25% 90deg, #f6f6f6, #f1f1f1);
		background: -webkit-gradient(linear, 0% 0%, 0% 25%, from(#f1f1f1), to(#f0f0f0));
	}

	th {
		background: -moz-linear-gradient(100% 20% 90deg, #e8eaeb, #ededed);
		background: -webkit-gradient(linear, 0% 0%, 0% 20%, from(#ededed), to(#0078ae));
	}
	
	/*
	I know this is annoying, but we need additional styling so webkit will recognize rounded corners on background elements.
	Nice write up of this issue: http://www.onenaught.com/posts/266/css-inner-elements-breaking-border-radius
	
	And, since we've applied the background colors to td/th element because of IE, Gecko browsers also need it.
	*/
	
	tr:first-child th.first {
		-moz-border-radius-topleft:3px;
		-webkit-border-top-left-radius:3px; /* Saf3-4 */
	}
	
	tr:first-child th.last {
		-moz-border-radius-topright:3px;
		-webkit-border-top-right-radius:3px; /* Saf3-4 */
	}

        tr:nth-child(even) {background: #f0f0f0}

	tr:nth-child(odd) {background: #d2d2d2}
	
	tr:last-child td.first {
		-moz-border-radius-bottomleft:3px;
		-webkit-border-bottom-left-radius:3px; /* Saf3-4 */
	}
	
	tr:last-child td.last {
		-moz-border-radius-bottomright:3px;
		-webkit-border-bottom-right-radius:3px; /* Saf3-4 */
	}

