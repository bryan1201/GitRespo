@model IEnumerable<Meetings.Models.vMeetingDateActivate>
@using Meetings.Models;
@using Meetings.Controllers.General;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid meetingDateId = ViewBag.id;
    bool IsAdmin = User.IsInRole("Admin");
}
@if (IsAdmin)
{
<p>
    @Html.ActionLink("Create MeetingDateActivate", "Create", new { id = meetingDateId })
</p>
}
<div class="row">
    <div class="col-md-12">
        <p>
            @using (Html.BeginForm("Index", "MeetingDateActivate", FormMethod.Post, new { enctype = "multipart/form-data", name = "meetingdateActivate", id = "meetingdateActivate" }))
            {
                <table class="table table-bordered table-striped table-condensed">
                    <tr>
                        <th style="width:20%">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().ActivateId)
                        </th>
                        <th style="width:15%">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().ActivateDesc)
                        </th>
                        <th style="width:15%">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().ActivateSDT)
                        </th>
                        <th style="width:15%">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().ActivateEDT)
                        </th>
                        <th>Create</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        if (item != null)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelitem => item.ActivateId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.ActivateDesc)
                                </td>
                                <td>
                                    @if (item.ActivateSDT.HasValue)
                                    {
                                        @item.ActivateSDT.Value.ToString("yyyy/MM/dd ")
                                    }
                                    @Html.DisplayFor(modelitem => item.ActivateSDT)
                                </td>
                                <td>
                                    @if (item.ActivateEDT.HasValue)
                                    {
                                        @item.ActivateEDT.Value.ToString("yyyy/MM/dd ")
                                    }
                                    @Html.DisplayFor(modelitem => item.ActivateEDT)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ActivateId }) | @Html.ActionLink("Details", "Details", new { id = item.ActivateId })
                                </td>
                            </tr>
                        }
                    }
                </table>
            }
        </p>
    </div>
</div>